<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvReport"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get your Incomes between two dates"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorTexts"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tvIncomeReportDateFrom"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="From (DD/MM/YYYY)"
                android:inputType="date"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/border"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorTexts"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="Pick Date"
                android:layout_gravity="center"
                android:textColor="@color/colorTexts"
                android:background="@drawable/button_background"
                android:id="@+id/btnIncomeReportDateFrom"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/tvIncomeReportDateTo"
                android:layout_width="270dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:hint="To (DD/MM/YYYY)"
                android:inputType="date"
                android:padding="5dp"
                android:textSize="18sp"
                android:background="@drawable/border"
                android:layout_marginRight="5dp"
                android:textColor="@color/colorTexts"/>
            <Button
                android:layout_width="75dp"
                android:layout_height="45dp"
                android:text="Pick Date"
                android:layout_gravity="center"
                android:textColor="@color/colorTexts"
                android:background="@drawable/button_background"
                android:id="@+id/btnIncomeReportDateTo"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnViewIncomeReport"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get Report"
            android:textColor="@color/colorTexts" />
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="GetBarChart"
            android:id="@+id/btnIncomeBarchart"
            android:background="@drawable/button_background"
            android:textColor="@color/colorTexts"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="GetPieChart"
            android:id="@+id/btnIncomePiechart"
            android:background="@drawable/button_background"
            android:textColor="@color/colorTexts"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>