<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tvExpenseTitle"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="EXPENSE"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorTexts"/>

    <EditText
        android:id="@+id/etExpenseType"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="56dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Expense Type"
        android:inputType="textPersonName"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etExpenseAmount"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Amount"
        android:inputType="number"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etExpenseDate"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Select Date"
        android:inputType="date"
        android:padding="5dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etExpenseTime"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:ems="10"
        android:gravity="center"
        android:hint="Time"
        android:inputType="time"
        android:padding="5dp" />

    <Button
        android:id="@+id/btnExpenseSubmit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:text="Submit"
        android:background="@drawable/button_background"
        android:textColor="@color/colorTexts"
       />

        <Button
            android:id="@+id/btnExpnenseViewAll"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="View all expenses"
            android:background="@drawable/button_background"
            android:textColor="@color/colorTexts"
            />

    </LinearLayout>
</ScrollView>