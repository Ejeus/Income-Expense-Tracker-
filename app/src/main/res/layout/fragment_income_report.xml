<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp"
    android:background="@drawable/gradient_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvReport"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="INCOME REPORT"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorTexts"/>

        <TextView
            android:id="@+id/etIncomeFrom"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="38dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Choose start date"
            android:inputType="date"
            android:padding="5dp"
            android:textColor="@color/colorTexts"/>

        <TextView
            android:id="@+id/etIncomeTo"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Choose Final Date"
            android:inputType="date"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/btnViewIncomeReport"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="190dp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="5dp"
            android:text="Get Report"
            android:textColor="@color/colorTexts" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>